<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FyreWorksPM.Controls.SearchableEntryView">

    <VerticalStackLayout>
        <Entry 
            x:Name="SearchBox"
            Text="{Binding SearchText, Mode=TwoWay, Source={x:Reference this}}"
            Placeholder="{Binding Placeholder, Source={x:Reference this}}"
            TextChanged="OnTextChanged" />

        <CollectionView 
            x:Name="SuggestionsView"
            IsVisible="{Binding ShowSuggestions, Source={x:Reference this}}"
            ItemsSource="{Binding FilteredSuggestions, Source={x:Reference this}}"
            SelectionMode="Single"
            SelectionChanged="OnSuggestionSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" Padding="5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
