                                <Label Text="Panel Totals:" FontAttributes="Bold" Grid.Column="0" />
                                <Label Text="{Binding PanelCostTotal, StringFormat='${0:F2}'}" Grid.Column="1" />
                                <Label Text="{Binding PanelSaleTotal, StringFormat='${0:F2}'}" Grid.Column="2" />
                            </Grid>
